<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="modelCountry"
            type="com.jean.mercadopago.data.models.Country" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/clTabDescription"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:layout_marginBottom="@dimen/margin_sixteen"
    android:padding="@dimen/padding_five"
    android:focusable="true">

    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_five"
        android:text="@={modelCountry.name}"
        android:textColor="@color/blue_default"
        android:textSize="@dimen/txt_size_eighteen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>
</layout>