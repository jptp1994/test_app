<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:background="@color/primary">

    <TextView
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_ten"
        android:layout_marginTop="@dimen/margin_ten"
        android:drawablePadding="@dimen/padding_twelve"
        android:gravity="center_vertical"
        android:text="@string/hint_name_user"
        android:textSize="@dimen/txt_size_twelve"
        android:textColor="@color/black"
        app:drawableStartCompat="@drawable/ic_flag_hint"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/header_title2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_sixteen"
        android:layout_marginEnd="@dimen/margin_ten"
        android:layout_marginBottom="@dimen/margin_ten"
        android:background="@drawable/round_row"
        android:paddingHorizontal="@dimen/padding_ten"
        android:gravity="center_vertical"
        android:drawablePadding="@dimen/padding_twelve"
        android:paddingVertical="5dp"
        android:text="@string/hint_mercado_pago"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_size_fourthteen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/header_title"
        app:layout_constraintStart_toStartOf="@+id/header_title"
        app:layout_constraintTop_toBottomOf="@+id/header_title"
        app:drawableStartCompat="@drawable/mercado_pago" />


</androidx.constraintlayout.widget.ConstraintLayout>